<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cloud_top_line"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:orientation="horizontal" >

    <!-- å·¦button -->

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp" >

        <Button
            android:id="@+id/cloud_top_left_botton1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:maxWidth="150dp"
            android:minWidth="70dp"
            android:textColor="@color/white"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/button_image1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:maxHeight="45dp"
            android:maxWidth="45dp" />
    </FrameLayout>

    <TextView
        android:id="@+id/cloud_top_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="15dp"
        android:maxWidth="170dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_toRightOf="@+id/cloud_top_text1"
        android:src="@drawable/icon_star"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="46dp"
        android:layout_toRightOf="@+id/cloud_top_left_botton1" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/newMessage"
                android:layout_width="20dip"
                android:layout_height="15dip"
                android:background="@drawable/p_count"
                android:visibility="gone" />

            <TextView
                android:id="@+id/newMessageCount"
                android:layout_width="20dip"
                android:layout_height="15dip"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/r_f" >

        <Button
            android:id="@+id/cloud_top_left_second_botton"
            style="@style/btn_style_default"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:minWidth="70dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/button_image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:maxHeight="45dp"
            android:maxWidth="45dp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/r_f"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp" >

        <Button
            android:id="@+id/cloud_top_right_botton1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:maxWidth="150dp"
            android:minWidth="70dp"
            android:textColor="@color/white"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/button_image3"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:maxWidth="150dp"
            android:minWidth="70dp"
            android:scaleType="center"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/cloud_top_right_progressBar"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="12dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/cloud_top_right_newmessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_margin="3dp"
            android:src="@drawable/point"
            android:visibility="gone" />
    </FrameLayout>

</RelativeLayout>