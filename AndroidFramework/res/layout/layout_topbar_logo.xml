<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cloud_top_line"
    android:layout_width="fill_parent"
    android:layout_height="47dp"
    android:layout_marginBottom="2dp"
    android:layout_alignParentTop="true"
    android:orientation="horizontal" >
	<!-- å·¦button -->
	<ImageView
            android:id="@+id/Logo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/top_logo"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/cloud_top_text1"
        android:layout_width="wrap_content"
        android:maxWidth="170dp"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/Logo"
        android:layout_marginLeft="5dp"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_toRightOf="@+id/cloud_top_text1"
        android:src="@drawable/icon_star"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight ="5dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/cloud_top_left_botton1" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:gravity="center_vertical" >
            <ImageView
                android:id="@+id/newMessage"
                android:layout_width="20dip"
                android:layout_height="15dip"
                android:background="@drawable/p_count"
                android:visibility="gone" />

            <TextView
                android:id="@+id/newMessageCount"
                android:layout_width="20dip"
                android:layout_height="15dip"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </RelativeLayout>
    </FrameLayout>
	 <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
	    android:layout_toLeftOf="@+id/r2_f">

        <Button
            android:id="@+id/cloud_top_left_botton1"
            style="@style/btn_style_default"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/button_image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:maxHeight="45dp"
            android:maxWidth="45dp" />
      
    </FrameLayout>
    <FrameLayout
        android:id="@+id/r2_f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/r_f" >

        <Button
            android:id="@+id/cloud_top_left_second_botton"
            style="@style/btn_style_default"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/button_image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:maxHeight="45dp"
            android:maxWidth="45dp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/r_f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_gravity="center">

            <Button
                android:id="@+id/cloud_top_right_botton1"
                style="@style/btn_style_default"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/button_image3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
           	    android:maxHeight="45dp"
           		android:maxWidth="45dp" />
        </FrameLayout>
		  <ProgressBar
            android:id="@+id/cloud_top_right_progressBar"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="12dp"
            android:visibility="gone" />
    </FrameLayout>
</RelativeLayout>